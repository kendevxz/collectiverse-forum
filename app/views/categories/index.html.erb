<div class="site__content">
  <div class="site__content__left">
    <div class="board sticky__board">
      <% if user_signed_in? %>
      <div class="board__container">
        <span class="board__main__text"><%= link_to current_user.username, '/profile' %></span>
        <div class="line__border"></div>
        <div class="board__sub">
          <div class="board__sub__container">
          <% @post = Post.all %>
            <span class="sub__main__text"><%= current_user.posts.count %></span>
            <span class="sub__title__text"> Posts </span>
          </div>
          <div class="board__sub__container">
            <span class="sub__main__text"><%= current_user.comments.count %></span>
            <span class="sub__title__text"> Comments </span>
          </div>
        </div>
      </div>
      <div class="board__profile__image" style="background-image: url(https://cdn.medcom.id/dynamic/content/2023/04/18/1559704/jnwhtaluoy.jpg?w=1024);">
      </div>
      <% else %>
      <div class="board__container">
        <span class="board__main__text">Home Page</span>
        <span class="board__main__text"><%= link_to "Login", new_user_session_path, class: "btn button__login nav__item" %></span>
      </div>
      <% end %>
    </div>
  </div>
  <div class="site__content__center">
    <div class="posts__container">
        <% Category.all.each do |category| %>
        <%= link_to category_path(category) do  %>
        <div class="post__container">
          <div class="post__content">
            <span class="category__title"><%= category.name %></span>
          </div>
          <div class="line__border"></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="site__content__right">
    <div class="board">
    <div class="board__container">
      <span class="board__main__text">Categories</span>
      <div class="line__border"></div>
        <div class="board__content">
          <% Category.all.first(10).each do |category| %>
            <%= link_to category_path(category) do  %>
            <span , class="board__content__text"><%= category.name.capitalize %></span>
            <% end %>
          <% end %>
        </div>
        <div class="line__border"></div>
      <%= link_to 'All Categories', categories_path, class: "board__additional__button" %>
      </div>
    </div>
     <div class="board">
      <div class="board__container">
        <span class="board__main__text">Top Users</span>
        <div class="line__border"></div>
        <div class="board__content">
          <% User.all.first(10).each do |user| %>
            <span class="board__content__text"><%= link_to user.username, '/profile' %> &nbsp;· 2.3k Karma</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="board">
      <div class="board__container">
        <span class="board__main__text">Top Traders</span>
        <div class="line__border"></div>
        <div class="board__content">
          <% User.all.first(10).each do |user| %>
            <span class="board__content__text"><%= link_to user.username, '/profile' %> &nbsp;· 5k Trades</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
