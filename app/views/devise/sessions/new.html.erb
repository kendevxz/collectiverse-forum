<div class="d-flex" id="set-margin">
  <div class="registration__content__left">
    <div class="registration__box">
        <h2 class="registration__box__text">Sign-in</h2>
        <h5 class="registration__box__text">Start selling and buying toys</h5>
      <div class="div-content">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
        <div class="form-actions d-inline">
          <%= f.button :submit, "Sign in", class: "button-primary" %>
        </div>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "button-secondary btn m-2" %><br />
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="registration__content__right">
    <img class="session__image" src="https://images.pexels.com/photos/16075337/pexels-photo-16075337/free-photo-of-poppen-speelgoed-handgemaakt-grijze-achtergrond.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="collection of toys">
    <%# <%= image_tag "login_picture", class: "session__image" %>
  </div>
</div>
