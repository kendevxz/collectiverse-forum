<div class="d-flex mt-5 mb-5 rounded full-page" id="set-margin">
  <div class="main-div m-0 p-0" style="background-color: #f0f3f7;" >
    <div class="banner">
      <h2>Sign-in</h2>
      <h5>Start selling and buying toys</h5>
      <hr class="solid">
    </div>

    <div class="div-content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions d-inline">
            <%= f.button :submit, "Sign in", class: "btn button-primary" %>
          </div>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "button-secondary btn m-2" %><br />
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>

      <% end %>
    </div>
  </div>
</div>
