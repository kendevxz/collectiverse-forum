<% start_date = Date.today %>
<% end_date = start_date + 6 %>




<section style="background-color:$collectiv-light-blue;">
  <div class="container py-5">
    <div class="row">
        <div class="card card__profile">
          <div class="card-body text-center">
            <img src="https://cdn.pixabay.com/photo/2023/05/02/10/32/avatar-7964941_1280.png" alt="avatar-large"
              class="rounded-circle img-fluid" style="width: 150px;">
           <h5 class="my-3"><%= current_user.username %></h5>
           <p class="my-3">Count Posts</p>
           <p class="my-3">Count Comments</p>
            <div class="d-flex justify-content-center mb-2">
              <%= link_to 'Edit Profile', edit_user_registration_path, class: "button-secondary btn m-2" %>
              <%= button_to("Log Out", destroy_user_session_path, method: :delete, class: "button-secondary btn m-2") %>
            </div>
          </div>
        </div>
        <div class="card card__karma">
          <div class="card-body text-center">
            <h5 class="my-3">Karma</h5>
            <p class="my-3 d-inline">Your Karma level</p>
            <h2 class="my-3"><%= current_user.admin_level %></h2>
            <button onclick="https://www.gaiam.com/blogs/discover/how-to-attract-good-karma">How to get better <b>Karma</b></button>
          </div>
        </div>
        <div class="card__calender">
          <div class="simple-calendar">

            <table class="table table-striped">
              <thead>
                <tr>
                <%= month_calendar(events: @toys, attribute: :release_date) do |date, toys| %>
                  <div class="calendar-day">
                    <%= date.day %>
                    <% if toys.any? %>
                      <div class="circle"></div>
                    <% end %>
                  </div>
                <% end %>
                </tr>
              </thead>
            </table>
          </div>
        </div>
    </div>
  </div>
</section>
